// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id serial [primary key]
  username text
  password text
  name varchar[16]
  email text
  age smallint
  sex varchar[6]
  height smallint
  weight smallint
  experience smallint
  goals text
  equipment boolean
  trainer boolean
  profile_pic text
  online_status boolean
}

model Post {
  id serial [primary key]
  user_id serial
  title varchar[32]
  body text
  created_at timestamp
  updated_at timestamp
}

model Photo {
  id serial [primary key]
  post_id serial
  url text
}